{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["vite.config.ts", "manifest.json"],
  "baseUrl": "./",
  "paths": {
    "@popup/*": ["src/*"],
    "@script/*": ["content-script/src/*"],
    "@background/*": ["background/src/*"]
  }
}
